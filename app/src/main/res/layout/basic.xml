<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <TextView
        android:text="Calories consumption for entered period(hours)"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/calorieConsumption" />

    <TextView
        android:id="@+id/calorieConsumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your calories consumption: "
        android:layout_marginTop="33dp"
        android:layout_below="@+id/timeEdit"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/timeEdit"
        android:inputType="number"
        android:textSize="16dp"
        android:layout_alignBaseline="@+id/timeTextView"
        android:layout_alignBottom="@+id/timeTextView"
        android:layout_alignStart="@+id/calorieConsumption"
       />
    <TextView
        android:text="Enter period(hours) : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeTextView"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="31dp"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/calorieConsumption"
         />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/CalcActivity"
        android:background="@drawable/button"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/calorieConsumption"
        android:layout_centerHorizontal="true" />
    <Button
        android:text="Get activity list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/getActivityListRecyclerView"
        android:background="@drawable/button"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/CalcActivity"
        android:layout_centerHorizontal="true" />

</RelativeLayout>